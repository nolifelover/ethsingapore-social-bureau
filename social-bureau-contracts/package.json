{
  "name": "social-bureau",
  "version": "1.0.0",
  "description": "social bureau",
  "scripts": {
    "test": "hardhat test",
    "lint:sol": "solhint --config .solhint.json \"contracts/**/*.sol\"",
    "lint:sol:fix": "solhint --config .solhint.json --fix \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config .eslintrc --ignore-path .gitignore --ext .js,.ts .",
    "lint:ts:fix": "eslint --config .eslintrc --ignore-path .gitignore . --fix",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config .prettierrc \"**/*.{js,json,md,sol,ts}\"",
    "gendoc": "hardhat dodoc",
    "deploy": "hardhat deploy",
    "console": "hardhat console",
    "verify": "hardhat verify",
    "flatten": "hardhat flatten:to-file",
    "flatten-all": "hardhat flatten:all-files",
    "deploy:mainnet": "hardhat --network bkc deploy",
    "deploy:testnet": "hardhat --network bkc_testnet deploy",
    "deploy:taiko": "hardhat --network taiko deploy",
    "verify:mainnet": "hardhat run scripts/verify.js --network bkc",
    "verify:testnet": "hardhat run scripts/verify.js --network bkc_testnet",
    "verify:goerli": "hardhat run scripts/verify.js --network goerli",
    "verify:taiko": "hardhat run scripts/verify.js --network taiko"
  },
  "repository": {
    "type": "git",
    "url": "https://git.zchoolmate.com/socialbureau/social-bureau-contracts"
  },
  "author": "L",
  "license": "MIT",
  "bugs": {
    "url": "https://git.zchoolmate.com/socialbureau/social-bureau-contracts/issues"
  },
  "homepage": "https://git.zchoolmate.com/socialbureau/social-bureau-contracts#readme",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.8",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^3.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-waffle": "^3.1.1",
    "ethers": "^5.0.0",
    "hardhat": "^2.7.0",
    "hardhat-deploy": "^0.9.14",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^4.2.5",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "web3": "^1.7.0",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.20"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "bip39": "^3.0.4",
    "eslint-plugin": "^1.0.1",
    "typescript": "^4.6.3"
  }
}
